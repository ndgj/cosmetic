<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          
    <%= f.label :ユーザーネーム %>
    <%= f.text_field :nick_name %>
  </div>

  <div class="field">
    <%= f.label :姓 %>
    <%= f.text_field :first_name %>      <%= f.label :名 %><%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :セイ %>
    <%= f.text_field :first_name_kana %>      <%= f.label :メイ %><%= f.text_field :last_name_kana %>
  </div>
  
  

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>